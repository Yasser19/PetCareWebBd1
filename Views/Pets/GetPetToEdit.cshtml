<!DOCTYPE html>
<html>
@model  IEnumerable<object>

@{
    List<PetCareBd1.Models.pets> petList = Model.ToList()[0] as List<PetCareBd1.Models.pets>;
    List<PetCareBd1.Models.customers> customerList = Model.ToList()[1] as List<PetCareBd1.Models.customers>;
}
<head>
    <meta charset="utf-8">
    <title>Mascotas</title>
    <link rel="stylesheet" href="../css/login.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.css" rel="stylesheet"
          type='text/css'>
</head>


<body>

    <nav class="navbar navbar-expand-sm bg-dark">

        <!-- Links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <h2 class="bannerh2">Petcare</h2>
            </li>

        </ul>

    </nav>


    <div class="container">


        <form action="~/Pets/EditPet" method="post">
            <br>
            <br>
            <h2>Mascotas</h2>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="idmascota">ID</label>
                    <input name="petid" value="@petList[0].petId" type="text" class="form-control" id="idmascota" readonly>
                </div>

            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="petname">Nombre</label>
                    <input value="@petList[0].petName" name="petName" type="text" class="form-control" id="petname" placeholder="tobi">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="idtipo">Tipo mascota</label>
                    <input value="@petList[0].petType" name="petType" type="text" placeholder="Delfín" class="form-control" id="idtipo">
                </div>
            </div>


            <div class="form-row">
                <div class="form-group col-md-6">

                    <label for="idcolor">Color</label>
                    <input value="@petList[0].petColor" name="petColor" type="text" placeholder="Gris" class="form-control" id="idcolor">

                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">

                    <label for="idraza">Raza</label>
                    <input value="@petList[0].petRace" name="petRace" type="text" placeholder="Biralata" class="form-control" id="idraza">

                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">

                    <label for="idraza">Dueño actual</label>
                    <input  value="@petList[0].customers.customerName" name="petown" type="text" placeholder="pepe" class="form-control" id="petow" disabled>

                </div>
            </div>


            <div class="form-row">
                <div class="form-group col-md-6">

                    <label>Dueño (cliente)</label>
                    <select name="petOwner" class="form-control" id="customeroptions">
                        @foreach (var x in customerList)
                        {


                            <option value="@x.customerId">@x.customerName</option>
                        }

                    </select>

                </div>
            </div>

            <br>

            <button type="submit" class="btn btn-primary">Actualizar mascota</button>
        </form>
        </div>
        </body>
</html>