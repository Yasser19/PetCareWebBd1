<!DOCTYPE html>
<html>
@model PetCareBd1.Models.customers
<head>
    <meta charset="utf-8">
    <title>Clientes</title>
    <link rel="stylesheet" href="../css/login.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.css"
          rel="stylesheet" type='text/css'>
</head>


<body>

    <nav class="navbar navbar-expand-sm bg-dark">

        <!-- Links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <h2 class="bannerh2">Petcare</h2>
            </li>

        </ul>

    </nav>


    <div class="container">


        <form action="~/Customer/EditCustomer" method="post">
            <br>
            <br>
            <h2>Clientes</h2>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="customerid">ID</label>
                    <input name="cus" value="@Model.customerId"type="text" class="form-control" id="customerid" readonly>
                </div>

            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="customername">Nombre</label>
                    <input value="@Model.customerName"name="customerName" type="text" class="form-control" id="customername" placeholder="Juan Pérez" required>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="customeremail">Email</label>
                    <input value="@Model.customerMail"name="customerMail" type="email" placeholder="Juanperez@gmail.com" class="form-control" id="customeremail" required>
                </div>
            </div>


            <div class="form-row">
                <div class="form-group col-md-6">

                    <label for="customerphone">Télefono</label>
                    <input value="@Model.customerPhone" name="customerPhone" type="text" placeholder="8491452335" class="form-control" id="customerphone" required>

                </div>
            </div>
            <br>

            <button type="submit" class="btn btn-primary">Actualizar cliente</button>
        </form>


    </div>
</body>
</html>